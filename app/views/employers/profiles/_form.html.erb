<%= form_for(@profile, url: employers_profile_path) do |f| %>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label :company %>
    <%= f.text_field :company, "Company (if applicable)" %>
  </div>

  <div>
    <%= f.label :company_description, "Company description (if applicable)" %>
    <%= f.text_field :company_description %>
  </div>

  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div>
    <%= f.label :mobile %>
    <%= f.text_field :mobile %>
  </div>

  <%= f.submit %>
<% end %>
