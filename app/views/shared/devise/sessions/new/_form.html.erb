<%= form_for(resource, :html => { :class => "form-horizontal" }, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <legend>Sign in as <%= user_type %></legend>

  <div class="control-group <%= control_group_error(resource, :email) %>">
    <%= f.label :email, :class => "control-label" %>
    <div class="controls">
      <%= f.email_field :email, :autofocus => true %>
      <%= error_help_text(resource, :email) %>
    </div>
  </div>

  <div class="control-group <%= control_group_error(resource, :password) %>">
    <%= f.label :password, :class => "control-label" %>
    <div class="controls">
      <%= f.password_field :password, class: "js-password" %>
      <%= error_help_text(resource, :password) %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <label class="checkbox" for="checkbox-remember-me" style="padding-top: 0;">
        Remember me
        <input type="checkbox" value="" id="checkbox-remember-me" data-toggle="checkbox" name="employer[remember_me]">
        <span class="icons">
          <span class="first-icon fui-checkbox-unchecked"></span>
          <span class="second-icon fui-checkbox-checked"></span>
        </span>

      </label>
      <%= f.submit "Sign in", :class => "btn btn-primary btn-embossed" %>
    </div>
  </div>
  <%= render "shared/devise/links" %>
<% end %>
