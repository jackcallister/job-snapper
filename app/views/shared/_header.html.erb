<div class="navbar">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="brand" href="#"><i>jobsnapper.co.nz</i></a>
      <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <div class="nav-collapse">
        <form class="form-search navbar-search pull-right" action="">
          <div class="input-append">
            <input type="text" class="search-query span2" placeholder="Search for a job">
            <button type="submit" class="btn btn-large">
              <i class="fui-search"></i>
            </button>
          </div>
        </form>

        <ul class="nav pull-right">
          <% if employer_signed_in? %>
            <%= render partial: "shared/navigation/employer" %>
          <% elsif candidate_signed_in? %>
            <%= render partial: "shared/navigation/candidate" %>
          <% else %>
            <%= render partial: "shared/navigation/visitor" %>
          <% end %>
        </ul>
      </div>

    </div>
  </div>
</div>
