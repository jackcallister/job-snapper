<%= form_for(@profile, :html => { :class => "form-horizontal" }, url: candidates_profile_path) do |f| %>
  <legend><%= action %> your profile</legend>

  <div class="control-group">
    <%= f.label :name, "Name (full)", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :name, :autofocus => true %>
    </div>
  </div>

  <%= render :partial => "shared/form/address", :locals => { :f => f } %>

  <div class="control-group">
    <%= f.label :contact_number, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :contact_number %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :about_me, :class => "control-label" %>
    <div class="controls">
      <%= f.text_area :about_me, :class => "span12", :rows => "3" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :previous_work_experience, :class => "control-label" %>
    <div class="controls">
      <%= f.text_area :previous_work_experience, :class => "span12", :rows => "3" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :skill_list, "Skills", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :skill_list, :class => "tagsinput tagsinput-primary" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "#{action}", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
